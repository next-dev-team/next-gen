    "electron-vite": "^2.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.{{ dashCase name }}.app",
    "productName": "{{ titleCase name }}",
    "directories": {
      "output": "dist"
    },
    "files": ["out/**/*"],
    "win": {
      "target": ["portable", "nsis"]
    }
  }
}
