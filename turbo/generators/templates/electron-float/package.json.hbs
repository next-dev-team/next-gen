{
  "name": "{{ dashCase name }}",
  "version": "1.0.0",
  "description": "Electron app with floating DevTools",
  "main": "./out/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
