{
  "name": "float-devtools-app",
  "version": "1.0.0",
  "description": "Electron app with floating DevTools",
  "main": "./out/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "concurrently \"npx @tailwindcss/cli -i src/renderer/src/input.css -o src/renderer/src/output.css --watch\" \"electron-vite dev\"",
    "build": "npx @tailwindcss/cli -i src/renderer/src/input.css -o src/renderer/src/output.css --minify && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --dir",
    "build:win:exe": "npm run build && electron-builder --win",
    "test": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "build": {
    "appId": "com.float-devtools-app.app",
    "productName": "Float Devtools App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    }
  }
}
